<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColorTheme"
    android:orientation="vertical"
    android:padding="@dimen/dim_16dp"
    tools:context=".presentation.ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/cityCountry"
        style="@style/viewParent.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tacna Peru" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateSearch"
        style="@style/viewParent.subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        android:text="11 de Octubre 2025" />


    <!--        android:background="?attr/selectableItemBackground"-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRainProbability"
        style="@style/CardVariableProbabilityStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rainProbabilityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:paddingVertical="@dimen/dim_8dp"
                android:text="Probabilidad de Lluvia"
                android:textSize="@dimen/size_22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/dim_8dp"
                android:paddingVertical="@dimen/dim_20dp"
                android:scaleType="centerCrop"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rainProbabilityTitle"
                app:srcCompat="@drawable/temperature_gota" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rainProbabilityPercentage"
                style="@style/CustomTitlePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 %"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
                app:layout_constraintTop_toBottomOf="@+id/rainProbabilityTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rainProbabilityDescription"
                style="@style/CustomTextPropDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="En este lugar llueve cada 10 dia en promedio en Octubre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/rainProbabilityPercentage"
                app:layout_constraintTop_toBottomOf="@+id/rainProbabilityPercentage" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

<!--        card 2 temprature-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTtemperatureProbability"
        style="@style/CardVariableProbabilityStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/temperatureProbabilityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:paddingVertical="@dimen/dim_8dp"
                android:text="Temperature Promedio"
                android:textSize="@dimen/size_22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgTemperature"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/dim_8dp"
                android:paddingVertical="@dimen/dim_20dp"
                android:scaleType="centerCrop"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temperatureProbabilityTitle"
                app:srcCompat="@drawable/temperature_gota" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/temperatureProbabilityPercentage"
                style="@style/CustomTitlePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 %"
                app:layout_constraintStart_toEndOf="@+id/imgTemperature"
                app:layout_constraintTop_toBottomOf="@+id/temperatureProbabilityTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/temperatureProbabilityDescription"
                style="@style/CustomTextPropDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="En este lugar llueve cada 10 dia en promedio en Octubre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/temperatureProbabilityPercentage"
                app:layout_constraintTop_toBottomOf="@+id/temperatureProbabilityPercentage" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
<!--Wind card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWindSpeedProbability"
        style="@style/CardVariableProbabilityStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/windSpeedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:paddingVertical="@dimen/dim_8dp"
                android:text="Velocida de Viento"
                android:textSize="@dimen/size_22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/dim_8dp"
                android:paddingVertical="@dimen/dim_20dp"
                android:scaleType="centerCrop"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/windSpeedTitle"
                app:srcCompat="@drawable/temperature_gota" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/windSpeedPercentage"
                style="@style/CustomTitlePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 %"
                app:layout_constraintStart_toEndOf="@+id/imgWindSpeed"
                app:layout_constraintTop_toBottomOf="@+id/windSpeedTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/windSpeedDescription"
                style="@style/CustomTextPropDescription"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:text="En este lugar llueve cada 10 dia en promedio en Octubre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/windSpeedPercentage"
                app:layout_constraintTop_toBottomOf="@+id/windSpeedPercentage" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>